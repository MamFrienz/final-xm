<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Form View</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    
<style>
    .center{
        text-align: center;
    }
</style>
</head>

<body>
    
    <div class="center form-group container">
        <h1 class="jumbotron">New User</h1>
        <input type="text" id="name" class="form-control" placeholder="Name" required><br>
        <input type="number" id="email" class="form-control" placeholder="Price" required><br>
        <input type="number" id="Quantity" class="form-control" placeholder="Age(Above 16)" min= “17” required><br>
        <button id="submit" class="btn btn-dark">Add User</button>  
    </div>
    
    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous">
    </script>
    
    
    <script type="text/javascript">
        var user = {name:"", price:"", quantity:""};
        
        $('#submit').click(function(event){
            user.name = $('#name').val();
            user.email = $('#price').val();
            user.age = $('#quantity').val();
            
            $.ajax({
                method:"POST",
                url:"/new-user",
                data: user
            }).done(function(response){
                console.log("User Added.");
                console.log(response.data);
            }).fail(function(response){
                console.log(response.responseText);
            });
        
        });   
    </script>
</body>
</html>